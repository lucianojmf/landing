doctype html
html(lang='pt-br', data-ng-app='petiko')
    head
        meta(charset='utf-8')
        title Petiko
        link(rel='stylesheet', href='css/app.css')
        link(href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css", rel="stylesheet")
        link(href="/css/datepicker.css", rel="stylesheet")
        link(rel="icon" type="image/png" href='/img/icon.png')

        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(name="description" content="PetiKo, o maior prêmio é o seu conhecimento")
        meta(name="keywords" content="animais, pet, veterinario, jogos, quiz, quizzes, jogos pet, cachorro, gato, peixe, comida, ração")
        meta(name="robots" content="index,follow")
        meta(property="og:title" content="Petiko")
        meta(property="og:type" content="Social")
        meta(property="og:url" content="http://www.petiko.com.br")
        meta(property="og:image" content="http://www.petiko.com.br/img/cover.jpg")
        meta(property="og:site_name" content="PetiKo")
        meta(property="og:description" content="PetiKo, o maior prêmio é o seu conhecimento!")

        script(type="text/javascript").
            if (window.location.href.indexOf('#_=_') > 0) {
                window.location = window.location.href.replace(/#.*/, '');
            }
    body(data-ng-cloak)
        nav.navbar.navbar-default.navbar-petiko(role='navigation', data-ng-controller="NavCtrl")
            a.navbar-brand(href='/')
                img(src='/img/logoSimples.png')

            ul.nav.navbar-nav.navbar-right
                li(data-access-level='accessLevels.anon', active-nav)
                    a(href='/login') Logar
                li(data-access-level='accessLevels.user')
                    a(href="", data-ng-click="logout()") Sair
        
        div(data-ng-view='ng-view')
            .alert.alert-error(data-ng-bind="error", data-ng-show="error")

        script(src="http://code.jquery.com/jquery-1.10.1.min.js")
        script(src='//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js')
        script(src='/js/bootstrap-datepicker.js')
        script(src='/js/locales/bootstrap-datepicker.pt-BR.js')
        script(src='http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.4/underscore-min.js')
        script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.8/angular.min.js')
        script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.8/angular-cookies.min.js')
        script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.8/angular-route.min.js')
        script(src='/js/routingConfig.js')
        script(src='/js/app.js')
        script(src='/js/services.js')
        script(src='/js/controllers.js')
        script(src='/js/filters.js')
        script(src='/js/directives.js')

        script(type='text/javascript').
            (function(d, s, id) {
                var js, fjs = d.getElementsByTagName(s)[0];
                if (d.getElementById(id)) return;
                js = d.createElement(s); js.id = id;
                js.src = "//connect.facebook.net/pt_BR/all.js#xfbml=1";
                fjs.parentNode.insertBefore(js, fjs);
